MF=	Makefile

CC=	./mpich/bin/mpicc
CFLAGS+=-I./mpich/include -O3 -g -Wall
LDFLAGS+=-L./mpich/lib -Wl,-rpath,./mpich/lib
LDLIBS+=-lmpi

LFLAGS=	-lm 

EXE=	build/image


SRC= \
	src/imagenew_v2.c \
	src/pgmio.c\
	src/arralloc.c\
	src/argtable3.c\
	src/functions.c\
	src/initializations.c\
	src/communications.c\
	src/ioutils.c

INC=\
	include/pgmio.h\
	include/arralloc.h\
	include/argtable3.h\
	include/functions.h\
	include/initialization.h\
	include/globalVariables.h\
	include/communications.h\
	include/ioutils.h
	
OBJ=\
	build/imagenew_v2.o\
	build/pgmio.o\
	build/arralloc.o\
	build/argtable3.o\
	build/functions.o\
	build/initializations.o\
	build/communications.o\
	build/ioutils.o

nThreads=1
#
# No need to edit below this line
#

.SUFFIXES:
.SUFFIXES: .c .o

$(EXE):$(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ) $(LFLAGS) $(LDFLAGS) $(LDLIBS)

build/%.o: src/%.c 
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ) $(EXE) 

run: 
	 ./mpich/bin/mpiexec -n ${nThreads} ./build/image

validation:
	diff data/output/imagenew192x128_expectedOutput.pgm  data/output/imagenew192x128.pgm
